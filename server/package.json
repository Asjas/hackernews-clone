{
  "name": "hackernews-backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "concurrently -k \"npm run watch-ts\" \"npm run watch\" ",
    "watch": "nodemon -e js,graphql -x node --inspect dist/index.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "prisma:deploy": "prisma deploy --env-file src/.env",
    "prisma:generate": "prisma generate --env-file src/.env"
  },
  "dependencies": {
    "apollo-server-koa": "^2.8.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.0.0",
    "graphql": "^14.4.2",
    "graphql-import": "^0.7.1",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.7.0",
    "prisma": "^1.34.3",
    "prisma-binding": "^2.3.15",
    "prisma-client-lib": "^1.34.3"
  },
  "devDependencies": {
    "@types/graphql": "^14.2.3",
    "concurrently": "^4.1.1",
    "husky": "^3.0.2",
    "lint-staged": "^9.2.1",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn lint"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,graphql,yml}": [
      "prettier --write",
      "git add"
    ]
  }
}
