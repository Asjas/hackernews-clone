{
  "name": "hackernews-backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon -e ts,graphql -x node --inspect -r ts-node/register src/index.ts",
    "build": "rimraf dist && npm -s run generate && tsc",
    "prisma:watch": "prisma2 generate --watch",
    "prisma:generate": "prisma2 generate",
    "prisma:migrate:save": "prisma2 migrate save --name hackernews --experimental",
    "prisma:migrate:up": "prisma2 migrate up --experimental",
    "prisma:studio": "prisma2 studio --experimental",
    "postinstall": "npm -s run prisma:generate"
  },
  "dependencies": {
    "@prisma/client": "2.0.0-preview022",
    "apollo-server": "2.14.2",
    "argon2": "0.26.0",
    "dotenv": "8.2.0",
    "graphql": "14.6.0",
    "jsonwebtoken": "8.5.1",
    "rimraf": "3.0.2",
    "typescript": "3.7.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/jsonwebtoken": "8.3.7",
    "@types/node": "13.7.2",
    "husky": "4.2.3",
    "lint-staged": "10.0.7",
    "nodemon": "2.0.2",
    "prettier": "1.19.1",
    "prisma2": "2.0.0-preview022",
    "ts-node": "8.6.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn lint"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,graphql,yml}": [
      "prettier --write",
      "git add"
    ]
  }
}
