{
  "name": "hackernews-backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon -e ts,graphql -x node --inspect -r ts-node/register src/index.ts",
    "build": "rimraf dist && tsc",
    "prisma:generate": "prisma generate",
    "prisma:migrate:save": "prisma migrate save --name hackernews --experimental",
    "prisma:migrate:up": "prisma migrate up --experimental",
    "prisma:studio": "prisma studio",
    "postinstall": "npm -s run prisma:generate"
  },
  "dependencies": {
    "@prisma/client": "2.26.0",
    "argon2": "0.28.2",
    "dotenv": "10.0.0",
    "fastify": "3.19.0",
    "fastify-cors": "6.0.1",
    "fastify-gql": "5.8.2",
    "fastify-helmet": "5.3.2",
    "fastify-no-icon": "4.0.0",
    "fastify-sentry": "1.4.0",
    "graphql": "15.5.1",
    "jsonwebtoken": "8.5.1",
    "make-promises-safe": "5.1.0",
    "rimraf": "3.0.2",
    "typescript": "4.3.5"
  },
  "devDependencies": {
    "@prisma/cli": "2.20.1",
    "@types/jsonwebtoken": "8.5.4",
    "@types/node": "14.17.5",
    "husky": "7.0.1",
    "lint-staged": "11.0.0",
    "nodemon": "2.0.9",
    "prettier": "2.3.2",
    "ts-node": "10.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn lint"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,graphql,yml}": [
      "prettier --write",
      "git add"
    ]
  }
}
