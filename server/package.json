{
  "name": "hackernews-backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon -e ts,graphql -x node --inspect -r ts-node/register src/index.ts",
    "build": "rimraf dist && tsc",
    "build-ts": "tsc",
    "prisma:deploy": "prisma deploy",
    "prisma:deploy:dev": "prisma deploy --env-file src/.env",
    "prisma:generate": "prisma generate --env-file src/.env",
    "snyk-protect": "snyk protect",
    "prepublish": "npm run snyk-protect"
  },
  "dependencies": {
    "apollo-server": "^2.8.1",
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.0.0",
    "graphql": "^14.4.2",
    "jsonwebtoken": "^8.5.1",
    "prisma": "^1.34.5",
    "rimraf": "^2.6.3",
    "typescript": "^3.5.3",
    "snyk": "^1.230.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/graphql": "^14.2.3",
    "@types/jsonwebtoken": "^8.3.3",
    "@types/node": "^12.7.1",
    "husky": "^3.0.3",
    "lint-staged": "^9.2.1",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "ts-node": "^8.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn lint"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,graphql,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "snyk": true
}
